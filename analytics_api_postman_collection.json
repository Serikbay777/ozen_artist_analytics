{
  "info": {
    "name": "Music Analytics API",
    "description": "Complete collection of analytics endpoints for music catalog data",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8002",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Overview & Trends",
      "item": [
        {
          "name": "Get Overview Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/analytics/overview",
              "host": ["{{base_url}}"],
              "path": ["analytics", "overview"]
            },
            "description": "Get high-level overview statistics including total revenue, streams, artists, tracks, platforms, countries, and average CPM."
          }
        },
        {
          "name": "Get Yearly Trends",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/analytics/trends/yearly",
              "host": ["{{base_url}}"],
              "path": ["analytics", "trends", "yearly"]
            },
            "description": "Get year-over-year trends with growth percentages."
          }
        },
        {
          "name": "Get Monthly Trends",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/analytics/trends/monthly",
              "host": ["{{base_url}}"],
              "path": ["analytics", "trends", "monthly"]
            },
            "description": "Get monthly trends. Optionally filter by year using ?year=2024"
          }
        },
        {
          "name": "Get Monthly Trends (2024)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/analytics/trends/monthly?year=2024",
              "host": ["{{base_url}}"],
              "path": ["analytics", "trends", "monthly"],
              "query": [
                {
                  "key": "year",
                  "value": "2024"
                }
              ]
            },
            "description": "Get monthly trends for 2024 only."
          }
        },
        {
          "name": "Get Quarterly Trends",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/analytics/trends/quarterly",
              "host": ["{{base_url}}"],
              "path": ["analytics", "trends", "quarterly"]
            },
            "description": "Get quarterly trends."
          }
        }
      ]
    },
    {
      "name": "Artists",
      "item": [
        {
          "name": "Get Top Artists (Revenue)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/analytics/artists/top?limit=20&metric=revenue",
              "host": ["{{base_url}}"],
              "path": ["analytics", "artists", "top"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "metric",
                  "value": "revenue"
                }
              ]
            },
            "description": "Get top 20 artists by revenue."
          }
        },
        {
          "name": "Get Top Artists (Streams)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/analytics/artists/top?limit=20&metric=streams",
              "host": ["{{base_url}}"],
              "path": ["analytics", "artists", "top"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "metric",
                  "value": "streams"
                }
              ]
            },
            "description": "Get top 20 artists by streams."
          }
        },
        {
          "name": "Get Artist Growth Matrix",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/analytics/artists/growth?limit=20",
              "host": ["{{base_url}}"],
              "path": ["analytics", "artists", "growth"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            },
            "description": "Get artist growth matrix (2023 vs 2024) with categorization: new_star, rising_star, stable_star, breakthrough."
          }
        },
        {
          "name": "Get Artist Diversity",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/analytics/artists/diversity?limit=20",
              "host": ["{{base_url}}"],
              "path": ["analytics", "artists", "diversity"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            },
            "description": "Get artist diversification metrics (platforms, countries, tracks)."
          }
        }
      ]
    },
